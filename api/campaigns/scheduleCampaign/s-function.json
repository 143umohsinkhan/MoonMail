{
  "name": "scheduleCampaign",
  "runtime": "babel",
  "description": "Serverless Lambda function for project: MoonMail-v2",
  "customName": "${project}-campaigns-scheduleCampaign",
  "customRole": false,
  "handler": "campaigns/scheduleCampaign/handler.default",
  "timeout": 6,
  "memorySize": 1024,
  "authorizer": {},
  "custom": {
    "excludePatterns": [],
    "cors": "$${corsSettings}"
  },
  "endpoints": [
    {
      "path": "/campaigns/{campaignId}/schedule",
      "method": "POST",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "scheduleAt": "$input.json('$.scheduleAt')",
          "campaignId": "$input.params('campaignId')",
          "authToken": "$input.params('Authorization')"
        }
      },
      "responses": "$${responses}"
    }
  ],
  "events": [],
  "environment": {
    "SERVERLESS_PROJECT": "${project}",
    "SERVERLESS_STAGE": "${stage}",
    "SERVERLESS_REGION": "${region}",
    "CAMPAIGNS_TABLE": "$${campaignsTable}",
    "DEBUG": "true"
  },
  "vpc": {
    "securityGroupIds": [],
    "subnetIds": []
  }
}
